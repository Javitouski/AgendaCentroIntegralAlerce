<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Internet para Firebase/Auth -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CentroALR"
        android:usesCleartextTraffic="false"
        tools:targetApi="31">

        <!-- Launcher -->
        <activity
            android:name=".view.LogInActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan"><intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>
        <activity android:name=".view.NotificationsActivity"/>
        <!-- Pantallas internas -->
        <activity
            android:name=".view.AgendMensActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".view.PasswordRecoveryActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".view.MainActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".view.ListaActividadesActivity"
            android:exported="false"
            android:label="Lista de actividades" />

        <!-- Activity que recibirÃ¡ el enlace del correo de Firebase (reset password) -->
        <activity
            android:name=".view.NewPasswordActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan">

            <!-- Android App Links verificados para Hosting de Firebase -->
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="https"
                    android:host="centroalr.web.app"
                    android:pathPrefix="/reset-password"
                    tools:ignore="IntentFilterUniqueDataAttributes" />

                <data android:scheme="https"
                    android:host="centroalr.firebaseapp.com"
                    android:pathPrefix="/__/auth/action"
                    tools:ignore="IntentFilterUniqueDataAttributes" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.AgndSemActivity"
            android:exported="false" />

        <activity
            android:name=".view.PerfilActivity"
            android:exported="false" />

        <activity
            android:name=".view.InfUsuarioActivity"
            android:exported="false" />

        <activity
            android:name=".view.DetActActivity"
            android:exported="false" />
        <activity
            android:name=".view.ChangePasswordActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".view.CancelActActivity" android:exported="false" />
        <activity android:name=".view.ReagActActivity" android:exported="false" />
        <activity android:name=".view.ModificarActActivity" android:exported="false" />

        <activity
            android:name=".view.CrearActActivity"
            android:exported="false" />
    </application>
</manifest>
