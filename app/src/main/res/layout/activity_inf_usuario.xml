<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainContainer"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".view.InfUsuarioActivity">

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_arrow_back"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Volver"
        app:tint="@android:color/black"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:layout_constraintBottom_toTopOf="@id/navHandle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="40dp"
                android:paddingTop="16dp"
                android:paddingBottom="32dp">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="24dp">

                    <ImageView
                        android:id="@+id/ivProfilePicture"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_person"
                        android:background="@drawable/bg_circle_green"
                        android:scaleType="centerInside"
                        android:padding="20dp"
                        app:tint="@color/white"/>
                </FrameLayout>

                <TextView
                    android:id="@+id/tvChangePhoto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Presiona para cambiar tu foto"
                    android:textColor="#18990D"
                    android:textSize="16sp"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre"
                    android:textColor="#18990D"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/etNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Javier Ignacio Rebolledo..."
                    android:textColor="#1D1B20"
                    android:background="@android:color/transparent"
                    android:paddingVertical="12dp"
                    android:inputType="textPersonName" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#49454F"
                    android:layout_marginBottom="24dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Función"
                    android:textColor="#18990D"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/etFuncion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Administrador del sistema"
                    android:textColor="#1D1B20"
                    android:background="@android:color/transparent"
                    android:paddingVertical="12dp"
                    android:inputType="text" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#49454F"
                    android:layout_marginBottom="24dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Permisos"
                    android:textColor="#18990D"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/menu_button_background"
                    android:elevation="2dp"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/tvPermisoSeleccionado"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Crear actividad"
                        android:textColor="#4C4C4C"
                        android:textSize="14sp"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_down"
                        app:tint="#4C4C4C"/>
                </LinearLayout>

                <!-- Botón morado para abrir pantalla Adjuntar Archivos -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSubirArchivoInfUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Subir archivo"
                    android:layout_marginTop="24dp"
                    app:icon="@drawable/ic_upload"
                    app:iconPadding="8dp"
                    app:cornerRadius="16dp"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <View
        android:id="@+id/navHandle"
        android:layout_width="108dp"
        android:layout_height="4dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_gesture_indicator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
