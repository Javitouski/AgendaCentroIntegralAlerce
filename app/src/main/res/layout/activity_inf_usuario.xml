<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".PerfilActivity">

    <!-- ScrollView para contenido -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="40dp">

            <!-- Header con hora y status bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="24dp"
                android:paddingVertical="12dp"
                android:importantForAccessibility="no"
                android:baselineAligned="false">

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif"
                    android:importantForAccessibility="no"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:importantForAccessibility="no"/>

                <!-- Iconos de status -->
                <ImageView
                    android:id="@+id/ivSignal"
                    android:layout_width="20dp"
                    android:layout_height="14dp"
                    android:layout_marginEnd="4dp"
                    android:src="@drawable/ic_signal"
                    android:contentDescription="@string/signal_icon"
                    android:importantForAccessibility="no"/>

                <ImageView
                    android:id="@+id/ivWifi"
                    android:layout_width="20dp"
                    android:layout_height="14dp"
                    android:layout_marginEnd="4dp"
                    android:src="@drawable/ic_wifi"
                    android:contentDescription="@string/wifi_icon"
                    android:importantForAccessibility="no"/>

                <ImageView
                    android:id="@+id/ivBattery"
                    android:layout_width="24dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_battery"
                    android:contentDescription="@string/battery_icon"
                    android:importantForAccessibility="no"/>
            </LinearLayout>

            <!-- Botón de retroceso -->
            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/ic_arrow_back"
                android:padding="12dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="@string/back_button"/>

            <!-- Foto de perfil y texto -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="40dp"
                android:paddingBottom="32dp"
                android:baselineAligned="false">

                <!-- Foto de perfil clickeable -->
                <FrameLayout
                    android:id="@+id/flProfilePicture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginEnd="24dp">

                    <ImageView
                        android:id="@+id/ivProfilePicture"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/ic_user_avatar"
                        android:background="@drawable/bg_circle_green"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/profile_picture"/>
                </FrameLayout>

                <!-- Texto instructivo -->
                <TextView
                    android:id="@+id/tvChangePhoto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/presiona_cambiar_foto"
                    android:textColor="#18990D"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:lineSpacingExtra="2dp"/>
            </LinearLayout>

            <!-- Campos del formulario -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="32dp">

                <!-- Campo Nombre -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nombre"
                    android:textColor="#18990D"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp"/>

                <EditText
                    android:id="@+id/etNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/nombre_placeholder"
                    android:textColor="#1D1B20"
                    android:textColorHint="#79747E"
                    android:textSize="16sp"
                    android:background="@android:color/transparent"
                    android:paddingVertical="12dp"
                    android:inputType="textPersonName"
                    android:maxLines="1"
                    android:importantForAutofill="no"/>

                <!-- Línea separadora -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#49454F"
                    android:layout_marginBottom="24dp"/>

                <!-- Campo Rut -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rut"
                    android:textColor="#18990D"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp"/>

                <EditText
                    android:id="@+id/etRut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/rut_placeholder"
                    android:textColor="#1D1B20"
                    android:textColorHint="#79747E"
                    android:textSize="16sp"
                    android:background="@android:color/transparent"
                    android:paddingVertical="12dp"
                    android:inputType="text"
                    android:maxLines="1"
                    android:importantForAutofill="no"/>

                <!-- Línea separadora -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#49454F"
                    android:layout_marginBottom="24dp"/>

                <!-- Campo Función -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/funcion"
                    android:textColor="#18990D"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp"/>

                <EditText
                    android:id="@+id/etFuncion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/funcion_placeholder"
                    android:textColor="#1D1B20"
                    android:textColorHint="#79747E"
                    android:textSize="16sp"
                    android:background="@android:color/transparent"
                    android:paddingVertical="12dp"
                    android:inputType="text"
                    android:maxLines="1"
                    android:importantForAutofill="no"/>

                <!-- Línea separadora -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#49454F"
                    android:layout_marginBottom="24dp"/>

                <!-- Campo Permisos -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/permisos"
                    android:textColor="#18990D"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingBottom="12dp"/>

                <!-- Dropdown de permisos -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_permisos_dropdown"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:minHeight="48dp">

                    <TextView
                        android:id="@+id/tvPermisoSeleccionado"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/crear_actividad"
                        android:textColor="#4C4C4C"
                        android:textSize="14sp"/>

                    <!-- Icono dropdown -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_drop_down"
                        android:contentDescription="@string/dropdown_icon"
                        android:tint="#4C4C4C"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Indicador de gestos -->
    <View
        android:layout_width="108dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_gesture_indicator"
        android:layout_marginBottom="16dp"
        android:importantForAccessibility="no"/>
</LinearLayout>