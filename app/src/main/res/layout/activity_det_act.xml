<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".view.DetActActivity">

    <!-- Status Bar Space -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:minHeight="24dp" />

    <!-- Top Bar con back button y título -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Volver" />

        <TextView
            android:id="@+id/tvToolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Detalle de actividad"
            android:textColor="#1D1B20"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />
    </LinearLayout>

    <!-- Contenido desplazable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingTop="8dp"
            android:paddingBottom="24dp">

            <!-- Nombre / título de la actividad -->
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="Nombre de la actividad"
                android:textColor="#18990D"
                android:textSize="24sp"
                android:textStyle="bold"
                android:lineSpacingExtra="2dp" />

            <!-- Línea secundaria: tipo y estado -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <!-- Tipo -->
                <TextView
                    android:id="@+id/tvTipo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_date_time"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:text="Taller grupal"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="12dp"
                    android:layout_height="1dp" />

                <!-- Estado -->
                <TextView
                    android:id="@+id/tvEstado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_filled_background"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:text="Activa"
                    android:textColor="#1D1B20"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Tarjeta: Fecha y hora -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/edittext_filled_background"
                android:paddingHorizontal="16dp"
                android:paddingVertical="14dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha y hora"
                    android:textColor="#18990D"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/tvFecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13 de octubre de 2025"
                    android:textColor="#1D1B20"
                    android:textSize="14sp"
                    android:layout_marginBottom="2dp" />

                <TextView
                    android:id="@+id/tvHora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13:45 - 15:00"
                    android:textColor="#1D1B20"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Tarjeta: Lugar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/edittext_filled_background"
                android:paddingHorizontal="16dp"
                android:paddingVertical="14dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lugar"
                    android:textColor="#18990D"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/tvLugar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sala Multiuso 2"
                    android:textColor="#1D1B20"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Tarjeta: Cupo, beneficiarios, días de aviso -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/edittext_filled_background"
                android:paddingHorizontal="16dp"
                android:paddingVertical="14dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Información de cupo"
                    android:textColor="#18990D"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/tvCupo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cupo total: 20"
                    android:textColor="#1D1B20"
                    android:textSize="14sp"
                    android:layout_marginBottom="2dp" />

                <TextView
                    android:id="@+id/tvBeneficiarios"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Beneficiarios inscritos: 12"
                    android:textColor="#1D1B20"
                    android:textSize="14sp"
                    android:layout_marginBottom="2dp" />

                <TextView
                    android:id="@+id/tvDiasAviso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Días de aviso: 2"
                    android:textColor="#1D1B20"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Tarjeta: Descripción -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/edittext_filled_background"
                android:paddingHorizontal="16dp"
                android:paddingVertical="14dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descripción"
                    android:textColor="#18990D"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/tvDescripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Espacio grupal orientado a trabajar relajación, respiración y fortalecimiento de vínculos comunitarios."
                    android:textColor="#1D1B20"
                    android:textSize="14sp"
                    android:lineSpacingExtra="2dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="16dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Zona inferior con FAB + menú flotante -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        android:paddingTop="8dp"
        android:paddingBottom="16dp">

        <!-- Menú de acciones (se despliega sobre el FAB) -->
        <LinearLayout
            android:id="@+id/menuAcciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:orientation="vertical"
            android:gravity="end"
            android:visibility="gone"
            android:paddingBottom="72dp">

            <!-- Modificar -->
            <LinearLayout
                android:id="@+id/btn_modificar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/button_green"
                android:paddingHorizontal="16dp"
                android:paddingVertical="10dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Modificar actividad"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Reagendar -->
            <LinearLayout
                android:id="@+id/btn_reagendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/button_green"
                android:paddingHorizontal="16dp"
                android:paddingVertical="10dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reagendar actividad"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Cancelar -->
            <LinearLayout
                android:id="@+id/btn_cancelar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/button_green"
                android:paddingHorizontal="16dp"
                android:paddingVertical="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancelar actividad"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!-- FAB con signo + -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            app:srcCompat="@drawable/ic_add"
            app:tint="@android:color/white"
            app:backgroundTint="@color/bright_green_button"/>

    </FrameLayout>

</LinearLayout>
