<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#FFFFFF"
	tools:context=".CrearActActivity">

	<!-- 1. Barra superior (Toolbar) -->
	<com.google.android.material.appbar.MaterialToolbar
		android:id="@+id/toolbar"
		android:layout_width="match_parent"
		android:layout_height="?attr/actionBarSize"
		app:layout_constraintTop_toTopOf="parent"
		app:navigationIcon="@drawable/ic_arrow_back" /> <!-- Necesitarás este ícono -->

	<!-- Título de la pantalla -->
	<TextView
		android:id="@+id/tvTitulo"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Crea una nueva actividad"
		android:textColor="#18990D"
		android:textSize="24sp"
		android:textStyle="bold"
		app:layout_constraintTop_toTopOf="@id/toolbar"
		app:layout_constraintBottom_toBottomOf="@id/toolbar"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent" />

	<!-- 2. Contenedor del formulario con Scroll -->
	<ScrollView
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:padding="24dp"
		app:layout_constraintTop_toBottomOf="@id/toolbar"
		app:layout_constraintBottom_toTopOf="@id/btnCrearActividad"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		android:fillViewport="true">

		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<!-- Campo Nombre -->
			<TextView
				android:id="@+id/labelNombre"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Nombre"
				android:textColor="#18990D"
				android:textSize="18sp"
				android:textStyle="bold"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintStart_toStartOf="parent" />

			<EditText
				android:id="@+id/etNombre"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				android:background="@drawable/bg_input_borde_morado"
				android:hint="Sesión de Yoga"
				android:inputType="textCapSentences"
				android:padding="16dp"
				android:textColor="#1D1B20"
				android:textSize="16sp"
				app:layout_constraintTop_toBottomOf="@id/labelNombre"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent" />

			<!-- Campo Tipo (Usamos un Spinner moderno) -->
			<TextView
				android:id="@+id/labelTipo"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="24dp"
				android:text="Tipo"
				android:textColor="#18990D"
				android:textSize="18sp"
				android:textStyle="bold"
				app:layout_constraintTop_toBottomOf="@id/etNombre"
				app:layout_constraintStart_toStartOf="parent" />

			<!-- Usamos un AutoCompleteTextView dentro de un TextInputLayout para un spinner moderno -->
			<com.google.android.material.textfield.TextInputLayout
				android:id="@+id/dropdownTipo"
				style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				app:layout_constraintTop_toBottomOf="@id/labelTipo"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent">

				<AutoCompleteTextView
					android:id="@+id/autoCompleteTipo"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:inputType="none"
					android:text="Selecciona un tipo" />
			</com.google.android.material.textfield.TextInputLayout>


			<!-- Campo Fecha -->
			<TextView
				android:id="@+id/labelFecha"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="24dp"
				android:text="Fecha"
				android:textColor="#18990D"
				android:textSize="18sp"
				android:textStyle="bold"
				app:layout_constraintTop_toBottomOf="@id/dropdownTipo"
				app:layout_constraintStart_toStartOf="parent" />

			<Button
				android:id="@+id/btnFecha"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				android:backgroundTint="#30D158"
				android:paddingHorizontal="20dp"
				android:paddingVertical="14dp"
				android:text="Oct, 13 2025"
				android:textAllCaps="false"
				android:textColor="@color/black"
				android:textSize="17sp"
				app:cornerRadius="12dp"
				app:layout_constraintTop_toBottomOf="@id/labelFecha"
				app:layout_constraintStart_toStartOf="parent" />

			<!-- Campo Hora -->
			<TextView
				android:id="@+id/labelHora"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="24dp"
				android:text="Hora"
				android:textColor="#18990D"
				android:textSize="18sp"
				android:textStyle="bold"
				app:layout_constraintTop_toBottomOf="@id/btnFecha"
				app:layout_constraintStart_toStartOf="parent" />

			<Button
				android:id="@+id/btnHora"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				android:backgroundTint="#30D158"
				android:paddingHorizontal="35dp"
				android:paddingVertical="14dp"
				android:text="13:45 PM"
				android:textAllCaps="false"
				android:textColor="@color/black"
				android:textSize="17sp"
				app:cornerRadius="12dp"
				app:layout_constraintTop_toBottomOf="@id/labelHora"
				app:layout_constraintStart_toStartOf="parent" />

			<!-- Campo Lugar (Spinner moderno) -->
			<TextView
				android:id="@+id/labelLugar"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="24dp"
				android:text="Lugar"
				android:textColor="#18990D"
				android:textSize="18sp"
				android:textStyle="bold"
				app:layout_constraintTop_toBottomOf="@id/btnHora"
				app:layout_constraintStart_toStartOf="parent" />

			<com.google.android.material.textfield.TextInputLayout
				android:id="@+id/dropdownLugar"
				style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				app:layout_constraintTop_toBottomOf="@id/labelLugar"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent">

				<AutoCompleteTextView
					android:id="@+id/autoCompleteLugar"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:inputType="none"
					android:text="Sala Multi-uso" />
			</com.google.android.material.textfield.TextInputLayout>

		</androidx.constraintlayout.widget.ConstraintLayout>

	</ScrollView>


	<!-- 3. Botón de Crear Actividad (fijo abajo) -->
	<com.google.android.material.button.MaterialButton
		android:id="@+id/btnCrearActividad"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_margin="24dp"
		android:backgroundTint="#02AF1C"
		android:paddingVertical="16dp"
		android:text="Crear Actividad"
		android:textColor="@color/white"
		android:textSize="16sp"
		app:cornerRadius="100dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>