<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <!-- Status Bar Space -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:minHeight="24dp" />

    <!-- Top Bar con back button y título -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Volver" />
//
        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

    </LinearLayout>

    <!-- Título Principal -->
    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="32dp"
        android:text="Adjuntar Archivos"
        android:textColor="#18990D"
        android:textSize="28sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp">

            <!-- Label: Seleccione la Actividad -->
            <TextView
                android:id="@+id/lblSelectActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Seleccione la Actividad"
                android:textColor="#18990D"
                android:textSize="15sp"
                android:textStyle="bold" />

            <!-- Dropdown Actividad -->
            <LinearLayout
                android:id="@+id/spinnerActivityContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:background="@drawable/spinner_background"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="8dp"
                android:paddingVertical="14dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/txtSelectedActivity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="R/3 18/10 Aprendizaje - 11:30"
                    android:textColor="#424242"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iconDropdown"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_down"
                    android:contentDescription="Desplegar" />
            </LinearLayout>

            <!-- Label: Adjuntar Archivo -->
            <TextView
                android:id="@+id/lblAttachFile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Adjuntar Archivo"
                android:textColor="#18990D"
                android:textSize="15sp"
                android:textStyle="bold" />

            <!-- Área de adjuntar archivo -->
            <LinearLayout
                android:id="@+id/fileAttachmentArea"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/file_upload_background"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iconUpload"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/ic_upload"
                    android:contentDescription="Subir archivo"
                    app:tint="#757575"
                    />

                <TextView
                    android:id="@+id/txtUploadHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Toca para adjuntar archivo"
                    android:textColor="#757575"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Texto de peso máximo -->
            <TextView
                android:id="@+id/txtMaxSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="Peso máximo 10mb"
                android:textColor="#18990D"
                android:textSize="13sp" />

            <!-- Espaciador -->
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:minHeight="80dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Botón fijo en la parte inferior -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingHorizontal="24dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:id="@+id/btnAddFiles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_green"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingVertical="14dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agregar Archivos"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>