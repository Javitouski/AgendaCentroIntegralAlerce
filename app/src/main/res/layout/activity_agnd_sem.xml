<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- ScrollView para contenido -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="80dp">

            <!-- Header con hora y status bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="24dp"
                android:paddingVertical="12dp"
                android:importantForAccessibility="no">

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif"
                    android:importantForAccessibility="no"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:importantForAccessibility="no"/>

                <!-- Iconos de status -->
                <ImageView
                    android:id="@+id/ivSignal"
                    android:layout_width="20dp"
                    android:layout_height="14dp"
                    android:layout_marginEnd="4dp"
                    android:src="@drawable/ic_signal"
                    android:contentDescription="@string/signal_icon"
                    android:importantForAccessibility="no"/>

                <ImageView
                    android:id="@+id/ivWifi"
                    android:layout_width="20dp"
                    android:layout_height="14dp"
                    android:layout_marginEnd="4dp"
                    android:src="@drawable/ic_wifi"
                    android:contentDescription="@string/wifi_icon"
                    android:importantForAccessibility="no"/>

                <ImageView
                    android:id="@+id/ivBattery"
                    android:layout_width="24dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_battery"
                    android:contentDescription="@string/battery_icon"
                    android:importantForAccessibility="no"/>
            </LinearLayout>

            <!-- Botón Cerrar Sesión y Avatar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="24dp"
                android:paddingTop="8dp"
                android:paddingBottom="16dp"
                android:baselineAligned="false">

                <TextView
                    android:id="@+id/btnCerrarSesion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cerrar_sesion"
                    android:textColor="#018A16"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_cerrar_sesion"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:gravity="center"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <!-- Avatar Usuario -->
                <ImageView
                    android:id="@+id/ivUserAvatar"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@drawable/ic_user_avatar"
                    android:background="@drawable/bg_circle_green"
                    android:contentDescription="@string/user_avatar"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>

            <!-- Título Agenda Semanal -->
            <TextView
                android:id="@+id/tvTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/agenda_semanal"
                android:textColor="#18990D"
                android:textSize="32sp"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingVertical="16dp"/>

            <!-- Mes -->
            <TextView
                android:id="@+id/tvMes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/octubre"
                android:textColor="#18990D"
                android:textSize="28sp"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingBottom="24dp"/>

            <!-- Días de la semana -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:background="@drawable/bg_dias_semana"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="24dp"
                android:baselineAligned="false">

                <!-- Lunes - Destacado -->
                <TextView
                    android:id="@+id/btnLunes"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="@string/lunes"
                    android:textColor="#066D0A"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@drawable/bg_dia_selected"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginHorizontal="2dp"/>

                <!-- Martes -->
                <TextView
                    android:id="@+id/btnMartes"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="@string/martes"
                    android:textColor="#066D0A"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginHorizontal="2dp"/>

                <!-- Miércoles -->
                <TextView
                    android:id="@+id/btnMiercoles"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="@string/miercoles"
                    android:textColor="#066D0A"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginHorizontal="2dp"/>

                <!-- Jueves -->
                <TextView
                    android:id="@+id/btnJueves"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="@string/jueves"
                    android:textColor="#066D0A"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginHorizontal="2dp"/>

                <!-- Viernes -->
                <TextView
                    android:id="@+id/btnViernes"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="@string/viernes"
                    android:textColor="#066D0A"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginHorizontal="2dp"/>

                <!-- Sábado -->
                <TextView
                    android:id="@+id/btnSabado"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="@string/sabado"
                    android:textColor="#066D0A"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginHorizontal="2dp"/>

                <!-- Domingo -->
                <TextView
                    android:id="@+id/btnDomingo"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="@string/domingo"
                    android:textColor="#066D0A"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginHorizontal="2dp"/>
            </LinearLayout>

            <!-- Lista de Eventos -->
            <LinearLayout
                android:id="@+id/llEventos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="24dp"
                android:baselineAligned="false">

                <!-- Evento 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:minHeight="72dp"
                    android:background="?attr/selectableItemBackground"
                    android:baselineAligned="false">

                    <!-- Badge R/1 -->
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/bg_badge_green"
                            android:contentDescription="@string/event_badge"
                            android:importantForAccessibility="no"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/evento1_badge"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:importantForAccessibility="no"/>
                    </FrameLayout>

                    <!-- Detalles del evento -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/evento1_fecha"
                            android:textColor="#1D1B20"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:paddingBottom="4dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/evento1_desc"
                            android:textColor="#49454F"
                            android:textSize="13sp"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Evento 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:minHeight="72dp"
                    android:background="?attr/selectableItemBackground"
                    android:baselineAligned="false">

                    <!-- Badge M/1 -->
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/bg_badge_green"
                            android:contentDescription="@string/event_badge"
                            android:importantForAccessibility="no"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/evento2_badge"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:importantForAccessibility="no"/>
                    </FrameLayout>

                    <!-- Detalles del evento -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/evento2_fecha"
                            android:textColor="#1D1B20"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:paddingBottom="4dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/evento2_desc"
                            android:textColor="#49454F"
                            android:textSize="13sp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#A2F576"
        android:elevation="8dp">

        <!-- FAB Button (Flotante) -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/fabInicio"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-28dp"
                android:src="@drawable/ic_home"
                android:background="@drawable/bg_fab_green"
                android:padding="12dp"
                android:elevation="12dp"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="@string/home_button"/>
        </FrameLayout>

        <!-- Opciones del bottom nav -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="16dp"
            android:paddingHorizontal="24dp"
            android:baselineAligned="false">

            <!-- Perfil -->
            <LinearLayout
                android:id="@+id/btnPerfil"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:background="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/perfil"
                    android:textColor="#625B71"
                    android:textSize="12sp"/>
            </LinearLayout>

            <!-- Inicio (espacio central) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/inicio"
                    android:textColor="#49454F"
                    android:textSize="12sp"
                    android:paddingTop="24dp"/>
            </LinearLayout>

            <!-- Crear Actividad -->
            <LinearLayout
                android:id="@+id/btnCrearActividad"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:background="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/crear_actividad"
                    android:textColor="#49454F"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Indicador de gestos -->
        <View
            android:layout_width="108dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_gesture_indicator"
            android:layout_marginBottom="8dp"
            android:importantForAccessibility="no"/>
    </LinearLayout>
</LinearLayout>