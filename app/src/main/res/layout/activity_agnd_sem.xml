<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainContainer"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:clipChildren="false"
    android:clipToPadding="false"
    tools:context=".view.AgndSemActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="120dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="24dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:baselineAligned="false">

                <TextView
                    android:id="@+id/btnCerrarSesion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cerrar_sesion"
                    android:textColor="#018A16"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_cerrar_sesion"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:gravity="center"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/ivUserAvatar"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@drawable/ic_person"
                    android:background="@drawable/bg_circle_green"
                    android:contentDescription="@string/user_avatar"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/agenda_semanal"
                android:textColor="#18990D"
                android:textSize="32sp"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingVertical="16dp"/>

            <TextView
                android:id="@+id/tvMes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/octubre"
                android:textColor="#18990D"
                android:textSize="28sp"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingBottom="24dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp" android:layout_marginBottom="24dp"
                android:baselineAligned="false">

                <ImageButton
                    android:id="@+id/btnPrevWeek"
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Semana Anterior"
                    android:scaleType="center"
                    android:src="@drawable/ic_arrow_back"
                    app:tint="#18990D" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="8dp"
                    android:background="@drawable/bg_dias_semana"
                    android:layout_marginHorizontal="8dp" android:baselineAligned="false">

                    <TextView
                        android:id="@+id/btnLunes"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="@string/lunes"
                        android:textColor="#066D0A"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:background="@drawable/bg_dia_selected"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginHorizontal="2dp"/>

                    <TextView
                        android:id="@+id/btnMartes"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="@string/martes"
                        android:textColor="#066D0A"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginHorizontal="2dp"/>

                    <TextView
                        android:id="@+id/btnMiercoles"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="@string/miercoles"
                        android:textColor="#066D0A"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginHorizontal="2dp"/>

                    <TextView
                        android:id="@+id/btnJueves"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="@string/jueves"
                        android:textColor="#066D0A"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginHorizontal="2dp"/>

                    <TextView
                        android:id="@+id/btnViernes"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="@string/viernes"
                        android:textColor="#066D0A"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginHorizontal="2dp"/>

                    <TextView
                        android:id="@+id/btnSabado"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="@string/sabado"
                        android:textColor="#066D0A"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginHorizontal="2dp"/>

                    <TextView
                        android:id="@+id/btnDomingo"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="@string/domingo"
                        android:textColor="#066D0A"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginHorizontal="2dp"/>
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btnNextWeek"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Semana Siguiente"
                    android:rotation="180"
                    android:scaleType="center"
                    android:src="@drawable/ic_arrow_back"
                    app:tint="@color/green" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/llEventos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="24dp"
                android:baselineAligned="false">
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#A2F576"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingHorizontal="24dp"
            android:baselineAligned="false">

            <TextView
                android:id="@+id/btnListaActividades"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/lista_actividades"
                android:textColor="#066D0A"
                android:textSize="13sp"
                android:textStyle="bold"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:minHeight="48dp"
                android:background="?attr/selectableItemBackground"
                android:drawableTop="@android:drawable/ic_menu_agenda"
                android:drawableTint="#066D0A"
                android:drawablePadding="4dp"/>

            <TextView
                android:id="@+id/fabInicio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/inicio"
                android:textColor="#066D0A"
                android:textSize="13sp"
                android:textStyle="bold"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:minHeight="48dp"
                android:background="?attr/selectableItemBackground"
                android:drawableTop="@drawable/ic_home"
                android:drawableTint="#066D0A"
                android:drawablePadding="4dp"/>

            <TextView
                android:id="@+id/btnCrearActividad"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/crearActividad"
                android:textColor="#066D0A"
                android:textSize="13sp"
                android:textStyle="bold"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:minHeight="48dp"
                android:background="?attr/selectableItemBackground"
                android:drawableTop="@drawable/ic_add"
                android:drawableTint="#066D0A"
                android:drawablePadding="4dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>