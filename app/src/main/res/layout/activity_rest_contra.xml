<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Contenido scrollable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Flecha atrás -->
            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="24dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_arrow_back"
                app:tint="#000000"
                android:contentDescription="Volver" />

            <!-- Título verde centrado -->
            <TextView
                android:id="@+id/txtTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="32dp"
                android:text="Para reestablecer tu contraseña, primero debes ingresar la contraseña actual."
                android:textColor="#18990D"
                android:textSize="22sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textAlignment="center" />

            <!-- Campo: contraseña actual -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingrese su contraseña actual"
                android:textColor="#49454F"
                android:textSize="12sp"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/etContrasenaActual"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#F2ECF4"
                android:paddingHorizontal="16dp"
                android:inputType="textPassword"
                android:textColor="#1D1B20"
                android:textColorHint="#49454F"
                android:layout_marginBottom="24dp" />

            <!-- Campo: contraseña nueva -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contraseña nueva"
                android:textColor="#49454F"
                android:textSize="12sp"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/etContrasenaNueva"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#F2ECF4"
                android:paddingHorizontal="16dp"
                android:inputType="textPassword"
                android:textColor="#1D1B20"
                android:textColorHint="#49454F"
                android:layout_marginBottom="24dp" />

            <!-- Campo: repetir contraseña nueva -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Repita la nueva contraseña"
                android:textColor="#49454F"
                android:textSize="12sp"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/etContrasenaNuevaRepetida"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#F2ECF4"
                android:paddingHorizontal="16dp"
                android:inputType="textPassword"
                android:textColor="#1D1B20"
                android:textColorHint="#49454F"
                android:layout_marginBottom="32dp" />

            <!-- Tarjeta de aviso -->
            <LinearLayout
                android:id="@+id/layoutAviso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#FEF7FF"
                android:padding="16dp"
                android:layout_marginBottom="40dp">

                <!-- Cuadrado morado -->
                <View
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="#6750A4"
                    android:layout_marginEnd="16dp" />

                <!-- Contenido -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtAvisoTitulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aviso"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1D1B20"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/txtAvisoDetalle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="La nueva contraseña debe contener:\n\n1. Una letra mayúscula\n2. Un número\n3. Una letra minúscula\n4. Algún símbolo ($,%,#,+,-)"
                        android:textSize="14sp"
                        android:textColor="#49454F" />
                </LinearLayout>
            </LinearLayout>

            <!-- Botón verde -->
            <Button
                android:id="@+id/btnCrearContrasena"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="40dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/bg_boton_verde_redondo"
                android:text="Crear contraseña nueva"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>

    <!-- Barrita inferior (Home indicator) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:gravity="center">

        <View
            android:layout_width="108dp"
            android:layout_height="4dp"
            android:background="@drawable/bg_handle_bar" />
    </LinearLayout>

</LinearLayout>
