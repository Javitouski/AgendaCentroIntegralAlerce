<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <!-- Status Bar Space -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:minHeight="24dp" />

    <!-- Top Bar con back button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Volver" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingBottom="24dp">

            <!-- Título Principal -->
            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp"
                android:text="Seleccione\nal usuario"
                android:textAlignment="center"
                android:textColor="#18990D"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Dropdown Usuario -->
            <LinearLayout
                android:id="@+id/spinnerUserContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:background="@drawable/spinner_background"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="8dp"
                android:paddingVertical="14dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/txtSelectedUser"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Javier Rebolledo"
                    android:textColor="#424242"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iconDropdownUser"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_down"
                    android:contentDescription="Desplegar" />
            </LinearLayout>

            <!-- Sección Nombre -->
            <TextView
                android:id="@+id/lblName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Nombre"
                android:textColor="#18990D"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="Javier Rebolledo"
                android:inputType="text"
                android:paddingVertical="12dp"
                android:textColor="#1D1B20"
                android:textColorHint="#9E9E9E"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="20dp"
                android:background="#E0E0E0" />

            <!-- Sección Rut -->
            <TextView
                android:id="@+id/lblRut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Rut"
                android:textColor="#18990D"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etRut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="20.524.730-0"
                android:inputType="text"
                android:paddingVertical="12dp"
                android:textColor="#1D1B20"
                android:textColorHint="#9E9E9E"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="20dp"
                android:background="#E0E0E0" />

            <!-- Sección Función -->
            <TextView
                android:id="@+id/lblFunction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Función"
                android:textColor="#18990D"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etFunction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="Coordinador de eventos."
                android:inputType="text"
                android:paddingVertical="12dp"
                android:textColor="#1D1B20"
                android:textColorHint="#9E9E9E"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="20dp"
                android:background="#E0E0E0" />

            <!-- Sección Permisos -->
            <TextView
                android:id="@+id/lblPermissions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Permisos"
                android:textColor="#18990D"
                android:textSize="15sp"
                android:textStyle="bold" />

            <!-- Dropdown Permisos -->
            <LinearLayout
                android:id="@+id/spinnerPermissionsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:background="@drawable/spinner_background"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="8dp"
                android:paddingVertical="14dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/txtSelectedPermission"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Modificar Actividades"
                    android:textColor="#424242"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iconDropdownPermissions"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_down"
                    android:contentDescription="Desplegar" />
            </LinearLayout>

            <!-- Espaciador -->
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:minHeight="40dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Botón fijo en la parte inferior -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingHorizontal="24dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:id="@+id/btnSaveChanges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_green"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingVertical="14dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guardar Cambios"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Home Indicator -->
        <View
            android:layout_width="120dp"
            android:layout_height="4dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/home_indicator" />
    </LinearLayout>

</LinearLayout>